<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/colorMainLight"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="12dp"
        android:paddingBottom="8dp"
        android:paddingTop="8dp"
        android:background="@color/colorMainDark"
        android:text="텍스트 메모 폴더"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#ffffff"/>

    <EditText
        android:id="@+id/input_folder_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="6dp"
        android:layout_marginTop="8dp"
        android:padding="4dp"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:background="#ffffff"
        android:hint="폴더의 이름을 입력" />

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_cancel_folder_add_memo"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:layout_marginHorizontal="8dp"
            android:layout_marginVertical="8dp"
            android:background="@color/colorMainDark"
            android:text="취소"
            android:textColor="#ffffff"
            android:textSize="16sp" />

        <Button
            android:id="@+id/button_ok_folder_add_memo"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:background="@color/colorMainDark"
            android:layout_marginRight="8dp"
            android:layout_marginVertical="8dp"
            android:textSize="16sp"
            android:textColor="#ffffff"
            android:text="확인" />
    </LinearLayout>
</LinearLayout>
