<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="12dp"
        android:paddingBottom="8dp"
        android:paddingTop="8dp"
        android:background="@color/colorMainDark"
        android:text="알림 시간 설정"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#ffffff"/>

    <TextView
        android:id="@+id/text_alarm_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="12dp"
        android:paddingVertical="8dp"
        android:gravity="center"
        android:textColor="@android:color/black"
        android:textSize="28sp"
        android:text="yyyy. mm. dd (a)" />
    <TextView
        android:id="@+id/text_alarm_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="12dp"
        android:paddingVertical="8dp"
        android:gravity="center"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        android:text="aa hh:mm" />

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_cancel_setting"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:layout_marginHorizontal="8dp"
            android:layout_marginVertical="8dp"
            android:background="@color/colorMainDark"
            android:text="취소"
            android:textColor="#ffffff"
            android:textSize="16sp" />

        <Button
            android:id="@+id/button_ok_setting"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:background="@color/colorMainDark"
            android:layout_marginRight="8dp"
            android:layout_marginVertical="8dp"
            android:textSize="16sp"
            android:textColor="#ffffff"
            android:text="확인" />
    </LinearLayout>
</LinearLayout>
