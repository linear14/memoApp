<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.dongldh.memoapp">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".FolderAddDialogFragment"></activity>
        <activity android:name=".FolderEditActivity" />
        <activity android:name=".MemoAlarmDialogFragment" />
        <activity android:name=".MemoOrderDialogFragment" />
        <activity android:name=".MemoEditDialogFragment" />
        <activity android:name=".AccountDetailDialogFragment" />
        <activity android:name=".MemoEditActivity" />
        <activity android:name=".AccountAddDialogFragment" />
        <activity android:name=".ErrorActivity" />
        <activity android:name=".MemoDetail" />
        <activity android:name=".MemoAddActivity" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <receiver android:name=".BroadCastAlarm" />
    </application>

</manifest>